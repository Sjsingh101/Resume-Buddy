<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_activity_bg"
    tools:context=".Activity.MainActivity">


        <RelativeLayout
            android:id="@+id/facebook_login"
            android:layout_marginTop="500dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/fb_blue">

                <ImageView
                    android:id="@+id/fb_login_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/com_facebook_button_icon"/>

                <TextView
                    android:id="@+id/fb_login_text"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/fb_login_img"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center|fill_horizontal"
                    android:text="Continue with Facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/google_login"
            android:layout_below="@id/facebook_login"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white">

                <ImageView
                    android:id="@+id/google_login_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal"/>

                <TextView
                    android:id="@+id/google_login_text"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/google_login_img"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center|fill_horizontal"
                    android:text="Conitinue with Google"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/register_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/google_login"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white">
                
                <ImageView
                    android:id="@+id/register_user_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_new_account"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>
                
                <TextView
                    android:id="@+id/register_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/register_user_img"
                    android:text="Create a new account"
                    android:textColor="@color/black"
                    android:gravity="center|fill_horizontal"
                    android:layout_marginLeft="30dp"/>
        </RelativeLayout>

                <TextView
                    android:id="@+id/sign_in_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_user_email"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Already a member? Log in"
                    android:gravity="center"
                    android:onClick="logInWithEmail"/>




        </RelativeLayout>